<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fh.mapper.dsno1.fhoa.FixedassetsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		OA_FIXEDASSETS
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.NAME,	
		f.SPECIFICATION,	
		f.STORAGEADDRESS,	
		f.CTIME,	
		f.SERVICELIFE,	
		f.METERING,	
		f.YTOTAL,	
		f.YPRICE,	
		f.STOTAL,	
		f.SPRICE,	
		f.XTOTAL,	
		f.XPRICE,	
		f.STATE,	
		f.REMARKS,	
		f.FIXEDASSETS_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		NAME,	
		SPECIFICATION,	
		STORAGEADDRESS,	
		CTIME,	
		SERVICELIFE,	
		METERING,	
		YTOTAL,	
		YPRICE,	
		STOTAL,	
		SPRICE,	
		XTOTAL,	
		XPRICE,	
		STATE,	
		REMARKS,	
		FIXEDASSETS_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NAME},	
		#{SPECIFICATION},	
		#{STORAGEADDRESS},	
		#{CTIME},	
		#{SERVICELIFE},	
		#{METERING},	
		#{YTOTAL},	
		#{YPRICE},	
		#{STOTAL},	
		#{SPRICE},	
		#{XTOTAL},	
		#{XPRICE},	
		#{STATE},	
		#{REMARKS},	
		#{FIXEDASSETS_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			FIXEDASSETS_ID = #{FIXEDASSETS_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			SPECIFICATION = #{SPECIFICATION},
			STORAGEADDRESS = #{STORAGEADDRESS},
			CTIME = #{CTIME},
			SERVICELIFE = #{SERVICELIFE},
			METERING = #{METERING},
			YTOTAL = #{YTOTAL},
			YPRICE = #{YPRICE},
			STOTAL = #{STOTAL},
			SPRICE = #{SPRICE},
			XTOTAL = #{XTOTAL},
			XPRICE = #{XPRICE},
			STATE = #{STATE},
			REMARKS = #{REMARKS},
			FIXEDASSETS_ID = FIXEDASSETS_ID
		where 
			FIXEDASSETS_ID = #{FIXEDASSETS_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.FIXEDASSETS_ID = #{FIXEDASSETS_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
					f.NAME LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
					 or 
					f.REMARKS LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') 
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			FIXEDASSETS_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>